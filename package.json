  "dependencies": {
    "ant-design-vue": "^3.2.20",
    "dayjs": "^1.11.9",
    "dexie": "^3.2.4",
    "dexie-export-import": "^4.0.7",
    "electron-store": "^8.1.0",
    "nedb": "^1.8.0",
    "path-browserify": "^1.0.1",
