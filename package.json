{
  "name": "vue-mhxy",
  "private": true,
  "version": "0.0.0",
  "main": "electron/main.js",
  "author": "youzhirong",
  "license": "MIT",
  "env": {
    "node": true
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "buildtsc": "vue-tsc && vite build",
